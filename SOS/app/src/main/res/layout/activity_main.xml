<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp">


        <TextView

            android:id="@+id/SOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SOS"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioButton

            android:id="@+id/SG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/GG"
            android:text="Simple Game" />

        <RadioButton
            android:id="@+id/GG"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/SG"
            android:layout_alignBottom="@+id/SG"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-58dp"
            android:text="General Game" />


        <TextView
            android:id="@+id/RedP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/GG"
            android:layout_marginTop="60dp"
            android:text="RedPlayer"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/BlueP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RedP"
            android:layout_marginStart="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="-307dp"
            android:layout_marginRight="-300dp"
            android:text="Blue Player"
            android:textSize="15sp" />

        <RadioButton

            android:id="@+id/Rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/RedP"
            android:layout_marginTop="95dp"
            android:text="S"
            android:layout_marginEnd="-60dp"/>
        <RadioButton
            android:id="@+id/RO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/RedP"
            android:layout_marginTop="95dp"
            android:text="O"
            android:layout_marginEnd="-130dp"/>

        <RadioButton

            android:id="@+id/Bs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/RedP"
            android:layout_marginTop="130dp"
            android:text="S"
            android:layout_marginEnd="-60dp"/>
        <RadioButton
            android:id="@+id/bO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/RedP"
            android:layout_marginTop="130dp"
            android:text="O"
            android:layout_marginEnd="-130dp"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <Button
            android:id="@+id/btn_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>
        <Button
            android:id="@+id/btn_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>
        <Button
            android:id="@+id/btn_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <Button
            android:id="@+id/btn_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>

        <Button
            android:id="@+id/btn_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp" />

        <Button
            android:id="@+id/btn_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">



        <Button
            android:id="@+id/btn_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>
        <Button
            android:id="@+id/btn_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>
        <Button
            android:id="@+id/btn_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="60dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


</LinearLayout>
